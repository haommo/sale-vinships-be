{
  "nixpacks": {
    "phases": {
      "setup": {
        "nixPkgs": ["nodejs_20"]
      },
      "install": {
        "cmds": ["npm ci"]
      },
      "build": {
        "cmds": [
          "npx prisma generate",
          "npm run build"
        ]
      }
    },
    "start": {
      "cmd": "npx prisma db push && npm run start:prod"
    }
  }
}
